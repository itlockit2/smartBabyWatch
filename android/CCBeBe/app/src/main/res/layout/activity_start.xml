<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".StartActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34.5dp"
        android:layout_marginEnd="34.5dp"
        android:layout_marginBottom="75dp"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="8sp"
        android:text="@string/start_description"
        android:textColor="#333333"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/notosanscjkkr_bold"
        app:layout_constraintBottom_toTopOf="@+id/kakaoLoginButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.doif.ccbebe.util.EasyLoginButton
        android:id="@+id/kakaoLoginButton"
        android:layout_width="280dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </com.doif.ccbebe.util.EasyLoginButton>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.95">

        <TextView
            android:id="@+id/email_signin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="16dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.05"
            android:textColor="#333333"
            android:textSize="14sp"
            android:text="@string/login_email"
            android:fontFamily="@font/notosanscjkkr_regular"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="1dp"
            android:layout_height="6dp"
            android:layout_gravity="center"
            android:background="@color/grayBasic"/>

        <TextView
            android:id="@+id/email_sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:background="@color/white"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="@string/signup_email"
            android:letterSpacing="-0.05"
            android:gravity="center_horizontal"
            android:fontFamily="@font/notosanscjkkr_regular"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>