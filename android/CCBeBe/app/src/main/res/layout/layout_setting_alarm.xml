<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_policy_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc_setting_diagram">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="26dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/layout_setting_alarm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="@string/setting_danger_alarm"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:textSize="16sp"
            android:textColor="@color/blackLight"
            android:gravity="start"
            android:letterSpacing="-0.04"
            />

        <TextView
            android:id="@+id/layout_setting_alarm_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_danger_alarm_description"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:textSize="10sp"
            android:textColor="@color/grayDark"
            android:gravity="start"
            android:letterSpacing="-0.05"
            />

    </LinearLayout>
    
    <Button
        android:id="@+id/layout_setting_alarm_button"
        android:layout_width="56dp"
        android:layout_height="32dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bc_alarm_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
